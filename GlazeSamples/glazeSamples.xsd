<?xml version="1.0" encoding="UTF-8" ?>
<!--
A format for describing pottery glaze samples.
-->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="tag:fenglich.fastmail.fm,2007:GlazeSamples"
           xmlns="tag:fenglich.fastmail.fm,2007:GlazeSamples"
           elementFormDefault="qualified">

    <xs:simpleType name="sampleIDsType">
        <xs:list itemType="sampleIDType"/>
    </xs:simpleType>

    <xs:simpleType name="sampleIDType">
        <xs:restriction base="xs:string">
            <xs:pattern value="(T|W)\d+"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:element name="glazeSamples">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="glazeSample"
                            maxOccurs="unbounded"
                            type="glazeSampleType"/>
            </xs:sequence>
            <xs:anyAttribute namespace="http://www.w3.org/XML/1998/namespace"/>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="glazeSampleType">
        <xs:sequence>
            <xs:element name="sample" type="sampleType" minOccurs="1" maxOccurs="unbounded"/>
            <xs:element name="glaze" type="glazeType" minOccurs="1" maxOccurs="unbounded"/>
            <!--<xs:element name="clay" type="clayType" minOccurs="1"/>-->
            <xs:element name="note" type="xs:normalizedString" minOccurs="1"/>
        </xs:sequence>
        <xs:attribute name="date" type="xs:date" use="required"/>
        <!--<xs:attribute name="id" type="sampleIDType" use="required"/>-->
    </xs:complexType>

    <xs:complexType name="sampleType">
        <xs:attribute name="id" use="required" type="sampleIDType"/>
    </xs:complexType>

    <xs:complexType name="clayType">
        <xs:attribute name="name" type="xs:string"/>
    </xs:complexType>

    <xs:complexType name="glazeType">
        <xs:attribute name="name" use="required" type="xs:string"/>
        <xs:attribute name="viscosity" use="optional" type="viscosityType"/>
    </xs:complexType>

    <xs:simpleType name="viscosityType">
        <xs:restriction base="xs:integer"/>
    </xs:simpleType>
</xs:schema>
