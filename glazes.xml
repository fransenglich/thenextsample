               <component idref="ZincOxide"         parts="4"/>
               <component idref="TinOxide"          parts="1" replacementFor="TitaniumDioxide"/>
               <component idref="CobberCarbonate"   parts="0.5"/>
               <component idref="Bentonite"         parts="2"/>
